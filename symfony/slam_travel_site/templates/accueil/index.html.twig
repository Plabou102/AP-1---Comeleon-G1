{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f8f8;
        padding: 10px;
    }
    .logo {
        flex: 1;
    }
    .logo img {
        max-height: 100px; 
    }
    .page-title {
        flex: 2;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }
    .nav-links {
        flex: 3;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    .nav-links a {
        text-decoration: none;
        font-size: 18px;
        color: #333;
        margin: 0 10px;
    }
    .nav-links img {
        max-height: 60px;
        margin-right: 5px;
    }
</style>

<header class="header">
    <!-- Logo à gauche -->
    <div class="logo">
        <a>
            <img src="{{ asset('images/logo_slam_travel.png') }}" alt="Logo"> 
        </a>
    </div>

    <!-- Nom de la page au centre -->
    <div class="page-title">
        Accueil
    </div>

    <!-- Liens de navigation avec images à droite -->
    <nav class="nav-links">
        <a>
            <img src="{{ asset('images/i.png') }}" alt="Informations Icon"> Informations
        </a>
        <a>
            <img src="{{ asset('images/voyage.png') }}" alt="Voyage Icon"> Voyage
        </a>
        <a>
            <img src="{{ asset('images/avis.png') }}" alt="Avis Icon"> Avis
        </a>
        <a>
            <img src="{{ asset('images/contact.png') }}" alt="Contact Icon"> Contact
        </a>
        <a>
            <img src="{{ asset('images/connexion.png') }}" alt="Connexion Icon"> Connexion
        </a>
    </nav>
</header>
{% endblock %}

