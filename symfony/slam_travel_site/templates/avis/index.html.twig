{% extends 'base.html.twig' %}

{% block title %}Avis Client{% endblock %}

{% block body %}
<style>
.container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    height: 100vh;
}
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f8f8;
        padding: 10px;
    }
    .logo {
        flex: 1;
    }
    .logo img {
        max-height: 100px; 
    }
    .page-title {
        flex: 2;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }
    .nav-links {
        flex: 3;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }
    .nav-links a {
        text-decoration: none;
        font-size: 18px;
        color: #333;
        margin: 0 10px;
        display: flex;
        flex-direction: column;
        align-items: center;    
        text-align: center;   
    }
    .nav-links img {
        max-height: 60px;
        margin-bottom: 5px; 
    }

    /* Style pour la barre de navigation */
.navbar {
    position: relative;
    z-index: 1000; 
    background-color: #f8f8f8;
    padding: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.page-background {
    position: relative;
    background-image: url('{{ asset("images/background.png") }}');
    background-size: 100%; /* Ou utilisez '100% auto' si vous préférez ajuster la largeur */
    background-position: center center; /* Centre l'image */
    background-repeat: no-repeat; /* Évite la répétition */
    height: 100vh; /* Occupe toute la hauteur de l'écran */
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centre verticalement le contenu */
    align-items: center; /* Centre horizontalement le contenu */
    text-align: center;
    color: white;
}


/* Texte superposé à l'image */
.overlay-text {
    z-index: 1; /* Assure que le texte est au-dessus de l'image */
    color: white;
    text-align: center;
    margin-bottom: 50px; /* Ajoute un espace entre le texte et les boutons */
    flex-direction: column;
}

.overlay-text h1 {
    font-size: 48px;
    margin-bottom: 20px; /* Espacement entre le titre et les boutons */
    flex-direction: column;
}

.overlay-text p {
    font-size: 24px;
    max-width: 10px;
    flex-direction: column;
}

/* Section des boutons avec description */
.button-section {
    display: flex;
    justify-content: center;
    gap: 40px; /* Espace entre chaque bouton */
    margin-top: 20px;
}

/* Conteneur pour chaque bouton */
.button-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 200px; /* Limite la largeur du texte pour chaque bouton */
}

.button-container p:last-child {
    max-width: 180px; /* Limite la largeur du paragraphe explicatif */
    margin-top: 10px;
    font-size: 14px;
    color: white;
    line-height: 1.4; /* Augmente la lisibilité du texte */
}

/* Style des boutons ronds */
.round-button {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background-color: #f8f8f8;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Ombre pour effet de relief */
    transition: transform 0.3s ease; /* Animation au survol */
}

.round-button img {
    max-width: 140px;
    max-height: 140px;
}


.round-button:hover {
    transform: scale(1.1);
}


.button-container p {
    margin-top: 10px;
    font-size: 16px;
    color: white;
}


</style>


<header class="header">
{% include 'nav.html.twig' %}
</header>

<div class="page-background">
    <h1>Laissez votre avis !</h1>

    <form action="{{ path('app_avis') }}" method="POST">
        <div>
            <label for="auteuravis">Auteur :</label>
            <input type="text" id="auteuravis" name="auteuravis" required>
        </div>

        <div>
            <label for="descriptionavis">Description :</label>
            <textarea id="descriptionavis" name="descriptionavis" required></textarea>
        </div>

        <div>
            <label for="noteavis">Note :</label>
            <input type="number" id="noteavis" name="noteavis" min="1" max="5" required>
        </div>

        <button type="submit">Soumettre</button>
    </form>
</div>

    {% if app.request.method == 'POST' %}
        <p>Merci pour votre avis !</p>
    {% endif %}
{% endblock %}


