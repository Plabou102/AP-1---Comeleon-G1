{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
.container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    height: 100vh;
}
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f8f8f8;
    padding: 10px;
}
.logo {
    flex: 1;
}
.logo img {
    max-height: 100px; 
}
.page-title {
    flex: 2;
    text-align: center;
    font-size: 24px;
    font-weight: bold;
}
.nav-links {
    flex: 3;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.nav-links a {
    text-decoration: none;
    font-size: 18px;
    color: #333;
    margin: 0 10px;
    display: flex;
    flex-direction: column;
    align-items: center;    
    text-align: center;   
}
.nav-links img {
    max-height: 60px;
    margin-bottom: 5px; 
}

.navbar {
    position: relative;
    z-index: 1000; 
    background-color: #f8f8f8;
    padding: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.page-background {
    position: relative;
    background-image: url('{{ asset("images/background.png") }}');
    background-size: 100%;
    background-position: center center;
    background-repeat: no-repeat;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    text-align: center;
    color: white;
    padding-bottom: 100px;
}

.overlay-text {
    z-index: 1; 
    text-align: center;
    margin-bottom: 20px; 
    padding: 20px;
    max-width: 800px;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 5);
}

.overlay-text h1 {
    font-size: 48px;
    margin-bottom: 20px; 
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 5);
}

.overlay-text p {
    font-size: 24px;
    max-width: 800px;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 5);
}



.button-section {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 20px;
}

.button-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 200px;
}

.button-container p:last-child {
    max-width: 180px;
    margin-top: 10px;
    font-size: 14px;
    color: white;
    line-height: 1.4;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 5);
}

.round-button {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    background-color: #f8f8f8;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease; 
}

.round-button img {
    max-width: 140px;
    max-height: 140px;
}

.round-button:hover {
    transform: scale(1.1);
}

.button-container p {
    margin-top: 10px;
    font-size: 16px;
    color: white;
}
</style>

