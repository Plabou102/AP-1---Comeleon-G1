{% block body %}
<style>
    /* Global styling for the form */
    body {
        background-color: #f7f9fc;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    /* Container for the signup form */
    .form-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    /* Form header */
    h2 {
        text-align: center;
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .logo {
        position: absolute; /* Position the logo absolutely */
        top: 10px; /* Distance from the top */
        left: 10px; /* Distance from the left */
    }

    /* Logo size */
    .logo img {
        max-width: 200px; /* Set the maximum width of the logo */
        height: auto; /* Maintain aspect ratio */
    }

    /* Input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 8px;
        margin-bottom: 20px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

    /* Labels for input fields */
    label {
        font-size: 14px;
        color: #555;
        font-weight: 500;
    }

    /* Submit button */
    button[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button[type="submit"]:hover {
        background-color: #0056b3;
    }

    /* Link styling */
    a {
        color: #007bff;
        text-decoration: none;
        text-align: center;
        display: block;
        margin-top: 10px;
    }

    a:hover {
        text-decoration: underline;
    }

    @media (max-width: 600px) {
        .form-container {
            padding: 20px;
        }

        h2 {
            font-size: 20px;
        }

        button[type="submit"] {
            font-size: 16px;
        }
    }
</style>

<div class="form-container">

    <div class="logo">
        <a href="{{ path('app_accueil') }}">
            <img src="{{ asset('images/logo_slam_travel.png') }}" alt="Logo"> 
        </a>
    </div>

    <h2>Inscription</h2>
    {{ form_start(FormUser, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_row(FormUser.nom, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Nom',
                    'required': true
                }
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(FormUser.prenom, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Prénom',
                    'required': true
                }
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(FormUser.username, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Nom d’utilisateur',
                    'required': true
                }
            }) }}
        </div>
        <div class="mb-3">
            {{ form_row(FormUser.password, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Mot de passe',
                    'required': true
                }
            }) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="mb-3">
            {{ form_row(FormUser.roles, {
                'attr': {
                    'class': 'form-control',
                    'required': true
                }
            }) }}
        </div>
        {% endif %}
        <button type="submit" onclick="redirectToHome(event)">{{ button_label | default('Ajouter') }}</button>
    {{ form_end(FormUser) }}
</div>
{% endblock %}
